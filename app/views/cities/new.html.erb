<% # encoding: utf-8 %>
<% provide(:title, "Новый город") %>
<h1>Новый город</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@city) do |f| %>
        <%= f.label :name, "Название города" %>
        <%= f.text_field :name %>

        <%= f.submit "Добавить город", class:"btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>