<% provide(:title, "Редактирование города") %>
<h1>Редактирование города</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@city) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Название города" %>
        <%= f.text_field :name %>

        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>