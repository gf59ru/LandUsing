<% provide(:title, 'Регистрация') %>
<h1>Регистрация нового пользователя</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= f.label :name, "Имя пользователя" %>
        <%= f.text_field :name %>

        <%= f.label :email, "Электронная почта (будет использоваться для входа)" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Подтверждение пароля" %>
        <%= f.password_field :password_confirmation %>

        <%= render 'shared/error_messages' %>

        <%= f.submit "Зарегистрироваться", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>