<% provide(:title, "Редактирование учётной записи") %>
<h1>Редактирование учётной записи</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Имя пользователя" %>
        <%= f.text_field :name %>

        <%= f.label :email, "Электронная почта" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>